<Window x:Class="Slotkin_WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slotkin_WPFDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnStackPanel" Content="StackPanelDemo" 
    HorizontalAlignment="Left" Margin="187,53,0,0" 
    VerticalAlignment="Top" Width="148" Click="btnStackPanel_Click"/> 
        
        <Button x:Name="btnWrapPanel" Content="WrapPanelDemo" 
    HorizontalAlignment="Left" Margin="250,90,0,0" 
    VerticalAlignment="Top" Width="148" Click="btnWrapPanel_Click" />

        <Button x:Name="btnCanvasPanel" Content="CanvasPanelDemo" 
    HorizontalAlignment="Left" Margin="500,90,0,0" 
    VerticalAlignment="Top" Width="148" Click="btnCanvasPanel_Click" />

        <Button x:Name="btnDockPanel" Content="DockPanelDemo" 
    HorizontalAlignment="Left" Margin="500,300,0,0" 
    VerticalAlignment="Top" Width="148" Click="btnDockPanel_Click" />

        <Button x:Name="btnGridPanel" Content="GridPanelDemo" 
    HorizontalAlignment="Left" Margin="50,100,0,0"  
    VerticalAlignment="Top" Width="148" Click="btnGridPanel_Click" />
    </Grid>
</Window>
